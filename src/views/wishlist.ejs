<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>

/* General Styles */
body {
    font-family: Arial, sans-serif;

}


.content_wraper{

    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
}


.swiper-slide {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    width: 80vw;
    height: 80vh;
    justify-content: space-evenly;
    align-items: center;
    margin-top: 2rem;
    
}

.image {
    
    width: 30vw;
    height: 70vh;
    overflow: hidden; /* Ensures that the image doesn't overflow the container */
}

.image img {
    width: 100%;
    height: auto; /* Maintains the aspect ratio of the image */

}


.hello {
    text-align: center;
    margin-top: 15px;
}

.swiper-slide_hading a {
    font-size: 1.5em;
    color: #333;
    text-decoration: none;
    font-weight: bold;
}

.swiper-slide_hading a:hover {
    color: #007bff;
}

span {
    display: block;
    margin: 5px 0;
}

span .bi {
    color: #ffcc00;
}

.price {
    font-size: 1.2em;
    color: #d9534f;
    font-weight: bold;
}

.circle_catalog {
    display: flex;
    justify-content: center;
    margin-top: 10px;
}

.circle_catalog1 {
    margin: 0 5px;
}

.circle_catalog1 img {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #ddd;
}

.product_btn {
    display: flex;
    justify-content: center;
    margin-top: 15px;
}

.product_btn button {
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    padding: 10px 20px;
    margin: 0 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 15vw;
    height: 6.5vh;
}

.product_btn button:hover {
    background-color: #0056b3;
}

.product_btn a {
    color: white;
    text-decoration: none;
}


    </style>

</head>




<body>

    <% product_all_data.forEach(function(p_data) { %>

        <div class="content_wraper">

        <div class="swiper-slide" id="">
            <div class="image"><img src=<%=p_data.product_image %> alt=""
                id="catalog_image_main1">
            </div>

            <div class="hello">

                <span class="swiper-slide_hading"><a href="">
                        <%= p_data.product_name %>
                    </a></span>

                <span><i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i class="bi bi-star-fill"></i> <i
                        class="bi bi-star-fill"></i> <i class="bi bi-star"></i></span>

                <span class="price">
                   price: $ <%= p_data.product_price %>
                </span>

                <div class="circle_catalog">

                    <div class="circle_catalog1"><img src="../public/img/slide1image/image0.jpg" alt=""
                            id="circle_catalog1"></div>

                    <div class="circle_catalog1"><img src="../public/img/slide1image/image1.jpg" alt=""
                            id="circle_catalog1"></div>

                    <div class="circle_catalog1"><img src="../public/img/slide1image/image2.jpg" alt=""
                            id="circle_catalog1"></div>


                </div>

                <div class="product_btn">

                    <button>
                        <a href="/user/product/remove?p_name=<%= p_data.product_name %>&p_id=<%= p_data.product_id %>&pr_id=<%= p_data._id %>">Remove</a>
                    </button>
                    
                    <button><a
                            href="/user/product/remove?p_name=levis Western denim jacket &p_img=https://shorturl.at/1aOqW&p_price=55.99&p_gender=female&p_color=gray&p_id=ghy567">buynow</a></button>

                </div>


            </div>

        </div>

    </div>

        <% }); %>

</body>

</html>